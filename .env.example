# Server Configuration
PORT=8000
HOST=0.0.0.0
ENVIRONMENT=development
DEBUG=true

# Airline API Configuration
AIRLINE_API_BASE_URL=https://api.airline.com
AIRLINE_API_TIMEOUT=5000
AIRLINE_API_RETRY_ATTEMPTS=3
AIRLINE_API_RETRY_DELAY=1000
AIRLINE_API_KEY=your_api_key_here

# Policy URLs
CANCELLATION_POLICY_URL=https://www.jetblue.com/flying-with-us/our-fares
PET_TRAVEL_POLICY_URL=https://www.jetblue.com/traveling-together/traveling-with-pets
POLICY_CACHE_TTL=3600

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_MAX_CONNECTIONS=10

# ML Model Configuration
ML_MODEL_PATH=./models/distilbert-classifier
ML_MAX_SEQUENCE_LENGTH=128
ML_CONFIDENCE_THRESHOLD=0.8
ML_BATCH_SIZE=16
ML_DEVICE=cpu

# Performance Thresholds
MAX_REQUEST_LATENCY=2000
MAX_API_LATENCY=5000
MAX_POLICY_LATENCY=3000
TARGET_AVAILABILITY=0.999

# Logging Configuration
LOG_LEVEL=INFO
ENABLE_AUDIT_LOGGING=true
ENABLE_METRICS=true
LOG_FORMAT=json